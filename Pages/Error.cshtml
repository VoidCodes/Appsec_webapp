<div class="text-center">
    <h1 class="display-1">@Model.StatusCode</h1>
    <p class="lead">
        @if (Model.StatusCode == 404)
        {
            <span>Oops! Page Not Found.</span>
        }
        else if (Model.StatusCode == 500)
        {
            <span>Internal Server Error. Something went wrong.</span>
        }
        else
        {
            <span>Oops! Something went wrong.</span>
        }
    </p>
    @if (Model.ShowRequestId)
    {
        <p>Request ID: <code>@Model.RequestId</code></p>
    }
    <a asp-page="/Index" class="btn btn-primary">Go to Home</a>
</div>
