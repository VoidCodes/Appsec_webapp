@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
@inject IHttpContextAccessor context;


<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        
        @if (Model.Request.Query["sessionExpired"] == "true")
        {
            <div class="alert alert-warning" role="alert">
                Your session has expired. Please log in again.
            </div>
        }

        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Login </h1>

            <form method="post" asp-antiforgery="true">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label text-dark" asp-for="Input.Email">Email</label>
                    <input type="Text" asp-for="Input.Email" class="form-control" placeholder="Enter your email"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label text-dark" asp-for="Input.Password">Password</label>
                    <input type="password" asp-for="Input.Password" class="form-control" placeholder="Enter your password"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
    
    <div class="row justify-content-center align-items-center mt-3">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <p>Don't have an account? <a asp-page="./Register">Register</a></p>
            <p>Forgot your password? <a asp-page="./ForgotPassword">Reset Password</a></p>
        </div>
    </div>

    
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>