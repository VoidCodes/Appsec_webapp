@page
@model Appsec_webapp.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<form method="post">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 offset-md-3">
                <h2>Logout</h2>
                <p>Are you sure you want to logout?</p>
                <div class="form-group">
                    <button class="btn btn-primary" asp-page-handler="Logout">Logout</button>
                    <button class="btn btn-secondary" asp-page-handler="DontLogout">Cancel</button>
                </div> 
            </div>
        </div>
    </div>
</form>

